@model CodeSparkNET.WEB.ViewModels.Account.ForgotPasswordViewModel

@{
  ViewData["Title"] = "Восстановление пароля";
  ViewData["App"] = "CodeSpark";
}

@section Styles {
  <link rel="stylesheet" href="~/css/Style/forgot.css" asp-append-version="true">
}

<div class="__container forgot_password">
  <header>
    <a href="@Url.Action("Index", "Home")" banner>
      <img src="~/../assets/img/banner-tag.webp" alt="head-banner">
    </a>
  </header>

  <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="form_controller" id="forgotForm"
    hover>
    @Html.AntiForgeryToken()

    <div class="description">
      <h2>Восстановление пароля</h2>
    </div>
    <span asp-validation-summary="ModelOnly" class="error_message_form"></span>
    <div class="input_block">
      <div class="email-block">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input asp-for="Email" id="email" type="text" required hover>
      </div>
    </div>
    <button type="submit" data-style="hyper-button" hover id="forgotFormSendBtn"><span>Восстановить</span></button>
    <div class="back_to_login-block">
      <a href="@Url.Action("Login", "Account")" hover data-style="link-underline">
        Вернуться к авторизации
      </a>
    </div>
  </form>

  <div class="js-window hidden" js-window-restore-password>
    <div class="description" hover>
      <h2>Проверьте вашу почту</h2>
      <a asp-action="Login" asp-controller="Account" hover data-style="hyper-button"><span>Войти</span></a>
    </div>
  </div>

  <footer>
    <section>
      <a href="@Url.Action("License", "Documents")" hover data-style="link">Лицензионное соглашение</a>
      <a href="@Url.Action("Privacy", "Documents")" hover data-style="link">Политика конфиденциальности</a>
    </section>
    <section>
      © Code Spark, 2025. Все права на объекты прав третьих лиц принадлежат их законным правообладателям.
    </section>
  </footer>
</div>

@section ScriptsMain {
  <script data-src="@(Url.Content("~/js/api/fogotPassword.js"))" type="text/plain"></script>
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}