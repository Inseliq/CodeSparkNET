@model CodeSparkNET.WEB.ViewModels.AdminCourse.CreateCourseViewModel
@{
    ViewData["Title"] = "Create Course";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Style/createCourse.css">
}

<h2>Создание курсов</h2>

<form asp-controller="AdminCourse" asp-action="CreateCourse" method="post" enctype="application/x-www-form-urlencoded" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Название курса</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Slug">Конструктор</label>
        <input asp-for="Slug" class="form-control" placeholder="необязательное" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CatalogId">ID-каталога</label>
        <input asp-for="CatalogId" class="form-control" />
        <span asp-validation-for="CatalogId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MainImageUrl">Основное изображение</label>
        <input asp-for="MainImageUrl" id="MainImageUrl" class="form-control" placeholder="вставьте ссылку" />
        <span asp-validation-for="MainImageUrl" class="text-danger"></span>

        <div id="imagePreview" style="margin-top:10px; display:none;">
            <p>Image preview:</p>
            <img id="imgPreview" src="" alt="Preview" style="max-width:300px; max-height:200px; display:block;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ShortDescription">Короткое описание</label>
        <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullDescription">Полное описание</label>
        <textarea asp-for="FullDescription" class="form-control" rows="6" placeholder=текст описания"></textarea>
        <span asp-validation-for="FullDescription" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsPublished" class="form-check-input" />
        <label asp-for="IsPublished" class="form-check-label">Опубликовать</label>
    </div>

    <div style="margin-top:10px;">
        <button type="submit" class="btn btn-primary">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section ScriptsMain {
    <script data-src="@(Url.Content("~/js/api/createCourse.js"))" type="text/plain"></script>
    <partial name="_ValidationScriptsPartial" />
}