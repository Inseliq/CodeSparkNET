@model CodeSparkNET.Dtos.Account.ForgotPasswordDto

@{
  ViewData["Title"] = "Регистрация";
}

@section Styles {
  <link rel="stylesheet" href="~/css/style/fogot.css">
}

<div class="__container fogot_password">
  <header>
    <a href="@Url.Action("Index", "Home")" banner>
      <img src="~/../assets/img/banner-tag.webp" alt="head-banner">
    </a>
  </header>

  <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="form_controller">
    @Html.AntiForgeryToken()

    <div class="description">
      <h2>Восстановление</h2>
    </div>
    <span asp-validation-summary="ModelOnly" class="error_message_form"></span>
    <div class="input_block">
      <div class="email-block">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input asp-for="Email" id="email" type="text" required>
      </div>
    </div>
    <button type="submit" data-style="hb">Восстановить</button>
    <div class="back_to_login-block">
      <a href="">
        Вернуться к авторизации
      </a>
    </div>
  </form>

  <div class="js-window hidden" js-window-restore-password>
    <div class="description">
      <h2>Проверьте вашу почту</h2>
      <button hover data-style="hb">Войти</button>
    </div>
  </div>

  <footer>
    <section>
      <a href="@Url.Action("License", "Documents")">Лицензионное соглашение</a>
      <a href="@Url.Action("Privacy", "Documents")">Политика конфиденциальности</a>
    </section>
    <section>
      © Code Spark, 2025. Все права на объекты прав третьих лиц принадлежат их законным правообладателям.
    </section>
  </footer>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}