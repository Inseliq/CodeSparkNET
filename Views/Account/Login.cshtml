@model CodeSparkNET.Dtos.Account.LoginDto

@{
  ViewData["Title"] = "Регистрация";
}

@section Styles {
  <link rel="stylesheet" href="~/css/style/login.css">
}

<div class="__container login">
  <header>
    <a href="@Url.Action("Index", "Home")" banner>
      <img src="~/../assets/img/banner-tag.webp" alt="head-banner">
    </a>
  </header>

  <form asp-action="Login" asp-controller="Account" method="post" class="form_controller">
    @Html.AntiForgeryToken()

    <div class="description">
      <h2>Войти</h2>
      <h3>Нет аккаунта? <a href="@Url.Action("Register", "Account")" login>Создать аккаунт</a></h3>
    </div>
    <span asp-validation-summary="ModelOnly" class="error_message_form"></span>
    <div class="input_block">
      <div class="email-block">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input asp-for="Email" id="email" type="text" required>
      </div>
      <div class="password-block">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input asp-for="Password" id="password" type="password" required>
      </div>
      <div class="checkbox_rm-block">
        <label asp-for="RememberMe">
          <input asp-for="RememberMe" type="checkbox">
          Запомнить меня.
        </label>
      </div>
    </div>
    <button type="submit" data-style="hb">Войти</button>
    <div class="fogot-block">
      <span>
        Не удаётся войти?
        <a href="">
          Восстановить аккаунт
        </a>
      </span>
    </div>
  </form>

  <footer>
    <section>
      <a href="@Url.Action("License", "Documents")">Лицензионное соглашение</a>
      <a href="@Url.Action("Privacy", "Documents")">Политика конфиденциальности</a>
    </section>
    <section>
      © Code Spark, 2025. Все права на объекты прав третьих лиц принадлежат их законным правообладателям.
    </section>
  </footer>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}