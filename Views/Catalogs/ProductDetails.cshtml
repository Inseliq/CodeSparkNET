@model CodeSparkNET.Dtos.Catalog.CatalogProductDetailsDto

@{
    ViewData["Title"] = "Продукт";
    ViewData["App"] = "CodeSpark";

    var parentCatalogSlug = ViewContext.RouteData.Values["catalogSlug"] as string;
    var firstImage = Model?.Images?.FirstOrDefault();

    var mainImageSrc = !string.IsNullOrEmpty(firstImage?.Url);
}
@section Styles {
    <link rel="stylesheet" href="~/css/style/WebApp.CodeSpark/_layout.header.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style/WebApp.CodeSpark/_layout.footer.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style/product-detail.css" asp-append-version="true">
}
@section Meta {
    <meta name="CodeSpark" content="_Navbar.header">
    <meta name="CodeSpark" content="_Navbar.footer">
}

<partial name="_WebApp_Navbar_header" />

<section class="product-details __container" aria-labelledby="product-title">
    <nav class="breadcrumb" aria-label="breadcrumb">
        <a class="breadcrumb__link" asp-controller="Home" asp-action="Index" hover>Главная</a>
        <span class="breadcrumb__sep">›</span>

        @if (!string.IsNullOrEmpty(parentCatalogSlug))
        {
            <a class="breadcrumb__link" asp-controller="Catalogs" asp-action="Catalog"
                asp-route-catalogSlug="@parentCatalogSlug" hover>Каталог</a>
            <span class="breadcrumb__sep">›</span>
        }

        <span class="breadcrumb__current" aria-current="page">@Model?.Name</span>
    </nav>

    <div class="product-grid">
        <!-- Gallery -->
        <aside class="gallery" aria-label="Галерея изображений товара">
            <div class="gallery__main">
                <img id="mainProductImage" class="gallery__image"
                     src="@Model?.Images?.FirstOrDefault(i => i.IsMain)?.Url"
                     alt="@(!string.IsNullOrEmpty(Model?.Name) ? Model.Name : "product image")" />
            </div>

            <div class="gallery__thumbnails">
                @if (Model?.Images != null && Model.Images.Any())
                {
                    @foreach (var img in Model.Images.Where(i => !i.IsMain))
                    {
                        <button type="button" class="thumb-btn"
                                data-src="@img?.Url"
                                aria-label="Показать изображение @img?.Name">
                            <img class="thumb-btn__img" src="@img?.Url" alt="@img?.Name" />
                        </button>
                    }
                }
            </div>
        </aside>

        <!-- Info -->
        <div class="info">
            <h1 id="product-title" class="product-title">@Model?.Name</h1>

            @if (Model.ProductType != "Course" && !Model.HasPrice)
            {
                <div class="product-meta-row">
                    <div class="price">
                        @if (Model != null)
                        {
                            <span class="price__value">@Model.Price.ToString("0.##")</span>
                            @if (!string.IsNullOrWhiteSpace(Model.Currency))
                            {
                                <span class="price__currency">@Model.Currency</span>
                            }
                        }
                    </div>

                    <div class="stock" aria-live="polite">
                        @if (Model != null)
                        {
                            <span class="stock__value">В наличии: @Model.InStock</span>
                        }
                    </div>
                </div>
            }

            <div class="product-actions">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (Model.ProductType == "Course")
                    {
                        @if (Model.IsAlreadyEnrolled || !Model.HasPrice)
                        {
                            <a asp-controller="Course" asp-action="@Model.Slug" hover>Читать</a>
                        }
                        else
                        {
                            <a asp-controller="Catalogs" asp-action="AddCourseToUser"
                                asp-route-productSlug="@Model.Slug" hover>Добавить</a>
                        }
                    }
                    else
                    {
                        <a href="#" hover>Связаться с нами</a>
                    }
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" hover>Войти</a>
                }
            </div>

            <section class="description" aria-labelledby="desc-heading">
                <h2 id="desc-heading" class="description__title">Описание</h2>

                @if (!string.IsNullOrWhiteSpace(Model?.FullDescription))
                {
                    <div class="description__content">@Html.Raw(Html.Encode(Model.FullDescription).Replace("\n", "<br />"))
                    </div>
                }
                else
                {
                    <div class="description__empty">Описание отсутствует.</div>
                }
            </section>
        </div>
    </div>
</section>

<partial name="_WebApp_Navbar_footer" />